<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Snapprefs_Theme2" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/aa_blank</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
        <item name="android:listSeparatorTextViewStyle">@style/settings_section_header</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#ff808080</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_snapprefs
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Snapprefs</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Snapprefs</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Snapprefs</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Snapprefs</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Snapprefs</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_snapprefs</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_snapprefs
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Snapprefs
        </item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
    </style>

    <style name="Snapprefs_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#9E9E9E</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources> 